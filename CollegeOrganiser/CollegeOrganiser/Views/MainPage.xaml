<Page
    x:Class="CollegeOrganiser.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CollegeOrganiser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Tapped="Page_Tapped">

    <Grid x:Name="LayoutRoot" Background="{StaticResource bookBrush}">
        <TextBlock HorizontalAlignment="Center"
                   FontFamily="Century-Gothic"
                   Margin="0 30 60 0"
                   FontSize="32" FontWeight="Bold">College Organiser
        </TextBlock>
        <StackPanel x:Name="sptextBlock" VerticalAlignment="Bottom"
                    Margin="0 0 0 50"
                    HorizontalAlignment="Center" >
            <TextBlock x:Name="titleTextBlock" 
                       Margin="170 0 0 0"
                       x:Uid="uidTitleTextBlock"
                       HorizontalAlignment="Center"
                       FontFamily="Century-Gothic"
                       TextAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Width="Auto">Tap To Begin
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
